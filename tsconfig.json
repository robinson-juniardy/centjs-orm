{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021.String", "DOM"],
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
